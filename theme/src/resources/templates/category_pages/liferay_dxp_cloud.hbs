<div class="container-fluid container-fluid-max-xl main-content">
	<div class="row">
		<div class="col-12">
			{{breadcrumbs}}
		</div>
	</div>

	<div class="categories-main row">
		<div class="category-heading col-md-12">
			<h1>
				{{dc 'dxp_cloud-page_heading'}}
			</h1>

			{{#if category.description}}
				<p class="secondary-font secondary-text-color">
					{{category.description}}
				</p>
			{{/if}}
		</div>

		<div class="col-md-12" id="dxpCloudProductPage"></div>
	</div>
</div>

<script>
	Liferay.render(
		Liferay.CardMenu,
		{
			className: 'products-landing',
			configs: [
				{
					description: '{{dc 'dxp_cloud-documentation_card_description'}}',
					name: '{{dc 'mega_menu-documentation'}}',
					svgId: '#getting-started',
					url: '/hc/categories/360000813091'
				},
				{
					description: '{{dc 'dxp_cloud-_knowledge_base_card_description'}}',
					name: '{{dc 'mega_menu-knowledge_base'}}',
					svgId: '#feature-requests',
					url: '/hc/categories/360001132872'
  				}
			]
		},
		document.getElementById('dxpCloudProductPage')
	);
</script>